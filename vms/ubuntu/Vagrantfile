# -*- mode: ruby -*-
# vi: set ft=ruby :

VAGRANTFILE_API_VERSION = "2"

### VM Setup variables
BOX_NAME       = "ubuntu"
BOX            = "jgabriel/ubuntu-20.04" # You can search for boxes at https://vagrantcloud.com/search
HOSTNAME       = "ubuntu"
PORT_FORWARD   = "80"
CPU            = "1"
RAM            = "1024"
DIR_HOST       = "../../scripts"
DIR_GUEST      = "/vagrant_data"

# Locale
ENV["LC_ALL"] = "en_US.UTF-8"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|
   
   config.vm.define (BOX_NAME) do |box|
      box.vm.box              = (BOX)
      box.vm.hostname         = (HOSTNAME)
      box.vm.box_version = "1.0" 
      box.vm.network "forwarded_port", guest: 3000, host: (PORT_FORWARD), host_ip: "127.0.0.1"
      box.vm.synced_folder (DIR_HOST), (DIR_GUEST)
      
      box.vm.provider "virtualbox" do |vb|
         vb.gui    = false
         vb.cpus   = (CPU)
         vb.memory = (RAM)
      end
      config.vm.provision "shell", path: "../../scripts/boot-strap.sh"
   end
end
